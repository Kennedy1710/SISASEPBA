@model IEnumerable<SISASEPBA.Models.EmpleadoConceptoNomina>

@{
    ViewBag.Title = "Index";
}

<div class="panel panel-default">
    <div class="panel panel-heading">
        <strong>Empleados conceptos por nómina</strong>
    </div>
    <div class="panel panel-body">

        <p>
            @Html.ActionLink("Ingresar empleado conceptos por nómina", "Create", "EmpleadoConceptoNomina", null, new { @class = "btn btn-primary" })
        </p> <br />

        <div class="table-responsive">

            <table class="table table-striped table-bordered" id="tablaEmpleadoConceptoNomina">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.IdEmpleado)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IdConcepto)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IdNomina)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ConsecutivoNomina)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Cantidad)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Monto)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Total)
                        </th>
                        <th>
                            Acción
                        </th>
                    </tr>
                </thead>

                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.IdEmpleado)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IdConcepto)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IdNomina)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ConsecutivoNomina)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Cantidad)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Monto)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Total)
                            </td>
                            <td>
                                @Html.ActionLink("Editar", "Edit", new { id=item.IdEmpleado, dato1= item.IdConcepto, dato2=item.IdNomina, dato3= item.IdConceptoLiquidacion },new {@class ="btn btn-danger" })
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>


    </div>
</div>

@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            //var rowsSelected = [];
            $('#tablaEmpleadoConceptoNomina').DataTable({
                "language": {
                    "sProcessing": "Procesando...",
                    "sLengthMenu": "Mostrar _MENU_ registros",
                    "sZeroRecords": "No se encontraron resultados",
                    "sEmptyTable": "Ningún dato disponible en esta tabla",
                    "sInfo": "Mostrando registros del _START_ al _END_ de un total de _TOTAL_ registros",
                    "sInfoEmpty": "Mostrando registros del 0 al 0 de un total de 0 registros",
                    "sInfoFiltered": "(filtrado de un total de _MAX_ registros)",
                    "sInfoPostFix": "",
                    "sSearch": "Buscar:",
                    "sUrl": "",
                    "sInfoThousands": ",",
                    "sLoadingRecords": "Cargando...",
                    "oPaginate": {
                        "sFirst": "Primero",
                        "sLast": "Último",
                        "sNext": "Siguiente",
                        "sPrevious": "Anterior"
                    },
                    "oAria": {
                        "sSortAscending": ": Activar para ordenar la columna de manera ascendente",
                        "sSortDescending": ": Activar para ordenar la columna de manera descendente"
                    }

                }

            });
        });
    </script>
}
