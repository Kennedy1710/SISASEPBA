@model IEnumerable<SISASEPBA.Models.Capacitacion>

@{
    ViewBag.Title = "Index";
}

<div class="panel panel-default">
    <div class="panel panel-heading">
        <strong>Capacitaciones</strong>
    </div>
    <div class="panel panel-body">
        <p>
            @Html.ActionLink("Ingresar capacitación", "Create", null, new { @class = "btn btn-primary" })
        </p> <br />

        <div class="table-responsive">
            <table class=table table-striped table-bordered" id="tablaCapacitaciones">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.IdTipoCapacitacion)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NombreCapacitacion)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EmpresaCapacitadora)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Estado)
                        </th>
                        <th>
                            Acción
                        </th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.IdTipoCapacitacion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NombreCapacitacion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EmpresaCapacitadora)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Estado)
                            </td>
                            <td>
                                @Html.ActionLink("Editar", "Edit", new { id = item.IdCapacitacion }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }
                </tbody>



            </table>

        </div>

    </div>
</div>

@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            //var rowsSelected = [];
            $('#tablaCapacitaciones').DataTable({
                "language": {
                    "sProcessing": "Procesando...",
                    "sLengthMenu": "Mostrar _MENU_ registros",
                    "sZeroRecords": "No se encontraron resultados",
                    "sEmptyTable": "Ningún dato disponible en esta tabla",
                    "sInfo": "Mostrando registros del _START_ al _END_ de un total de _TOTAL_ registros",
                    "sInfoEmpty": "Mostrando registros del 0 al 0 de un total de 0 registros",
                    "sInfoFiltered": "(filtrado de un total de _MAX_ registros)",
                    "sInfoPostFix": "",
                    "sSearch": "Buscar:",
                    "sUrl": "",
                    "sInfoThousands": ",",
                    "sLoadingRecords": "Cargando...",
                    "oPaginate": {
                        "sFirst": "Primero",
                        "sLast": "Último",
                        "sNext": "Siguiente",
                        "sPrevious": "Anterior"
                    },
                    "oAria": {
                        "sSortAscending": ": Activar para ordenar la columna de manera ascendente",
                        "sSortDescending": ": Activar para ordenar la columna de manera descendente"
                    }

                }

            });
        });
    </script>
}